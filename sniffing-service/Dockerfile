FROM python:3.9-slim

RUN apt-get update && apt-get install -y \
    tcpdump \
    libpcap-dev \
    aircrack-ng \
    wireless-tools \
    iw \
    net-tools \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install -r requirements.txt

COPY . .

CMD ["python", "sniffer.py"]
